{
  "compilerOptions": {
    "types": [ "node" ],
    "target": "es6",
    "module": "es6",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "removeComments": false,
    "noUnusedLocals": true,
    "sourceMap": true,
    "jsx": "react",
    "lib": [ "dom", "es2018" ],
    "rootDir": "./src",
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./types"
  }
}
